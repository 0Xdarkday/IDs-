{
    "api_server": {
        "ip": "127.0.0.1",
        "port": 80,
        "server_type": "apache",
        "base_url": "",
        "report_endpoint": "report.php",
        "use_https": false
    },
    "logging": {
        "level": "INFO",
        "file": "logs/reporter.log"
    },
    "detection_thresholds": {
        "port_scan": {
            "threshold": 5,
            "window": 60
        },
        "ddos": {
            "threshold": 100,
            "window": 10
        },
        "mac_flooding": {
            "threshold": 100,
            "window": 10
        },
        "arp": {
            "threshold": 10,
            "window": 60
        }
    },
    "patterns": {
        "sql_injection": [
            "' OR '1'='1",
            "' OR '1'='1' --",
            "' OR '1'='1' /*",
            "' OR 1=1"
        ]
    },
    "interfaces": {
        "default": "eth0"
    }
}
